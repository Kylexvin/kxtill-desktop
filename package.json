{
  "name": "kxtill-desktop",
  "version": "1.0.0",
  "description": "KXTILL Desktop POS Application",
  "main": "src/main/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "react-dev": "cd src/renderer && npm start",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build": "cd src/renderer && npm run build",
    "build-electron": "npm run build && electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "pos",
    "retail",
    "electron",
    "kxtill"
  ],
  "author": "KXTILL",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.kxtill.pos",
    "productName": "KxTill POS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "sql.js": "^1.13.0"
  }
}
